{
  "server": {
    "port": 3000
  },

  "api": {
    "path": "/api",

    "govee": {
      "path": "/govee",

      "methods": [ "GET", "POST" ],
      "map": {
        "devices": {
          "path": "/init",
          "rate_limited": false
        },
        "refresh_devices": {
          "path": "/re-init",
          "rate_limited": true
        },

        "controller": {
          "path": "/control",
          "rate_limited": true
        }
      }
    },

    "hcpss": {
      "path": "/hcpss",

      "methods": [ "GET" ],
      "map": {
        "calendar": {
          "path": "/calendar",
          "rate_limited": false
        },
        "status": {
          "path": "/status",
          "rate_limited": false
        }
      }
    },

    "throttle": {
      "quota": 10000,
      "controller_requests": 10,

      "time_precision": 5000
    }
  },

  "source": {
    "weather": {
      "present": {
        "scene": {
          "list": [
            { "condition": "thunderstorms", "scene": "Lightning" },
            { "condition": "snow", "scene": "Winter" },
            { "condition": "rain", "scene": "Downpour" }
          ]
        }
      },

      "temperature": {
        "range": {
          "min": -20,
          "max": 40
        }
      },
      "visibility": {
        "range": {
          "min": -1609.344,
          "max": 16093.44
        }
      }
    },

    "luminary": {
      "sun": {
        "rise": {
          "start": {
            "phenomenon": "Begin Civil Twilight",
            "offset": 0
          },
          "end": {
            "phenomenon": "Rise",
            "offset": 0
          }
        },
        "set": {
          "start": {
            "phenomenon": "Set",
            "offset": 0
          },
          "end": {
            "phenomenon": "End Civil Twilight",
            "offset": 0
          }
        }
      },

      "moon": {
        "rise": {
          "start": {
            "phenomenon": "Rise",
            "offset": 0
          },
          "end": {
            "phenomenon": "Rise",
            "offset": 0
          }
        },
        "set": {
          "start": {
            "phenomenon": "Set",
            "offset": 0
          },
          "end": {
            "phenomenon": "Set",
            "offset": 0
          }
        }
      }
    },

    "hcpss": {
      "start": {
        "time": 750,
        "offset": -120
      }
    }
  },

  "device": {
    "phase": {
      "list": [
        {
          "name": "wind_down",
          "time": {
            "start": 2200,
            "end": 2230
          },
          "scenes": [ "Sleep" ]
        },
        {
          "name": "daylight",
          "time": {
            "start": "school.start",
            "end": "sunset.start"
          }
        },
        {
          "name": "sleep",
          "time": {
            "start": 2230,
            "end": 1030
          },
          "scenes": [ "SleepLightsOff" ]
        },
        {
          "name": "sunset",
          "time": {
            "start": "sunset.start",
            "end": "sunset.end"
          }
        },
        {
          "name": "moonlight",
          "time": {
            "start": "moonrise.start",
            "end": "moonset.end"
          },
          "scenes": [ "Moonlight" ]
        },
        {
          "name": "night",
          "time": {
            "start": "sunset.end",
            "end": "sunrise.start"
          },
          "scenes": [ "Starry Sky", "Aurora", "Meteor shower" ]
        }
      ],
      "default": "daylight",

      "data": {
        "sunset": {
          "color": {
            "r": 251,
            "g": 86,
            "b": 7
          }
        }
      }
    },
    "scene": {
      "duration": {
        "range": {
          "min": 5,
          "max": 30
        }
      }
    },

    "use": {
      "index": 0
    }
  },

  "for_client": {
    "api": {
      "path": true,
      "client": {
        "path": true,
        "map": true
      },
      "govee": {
        "path": true,
        "map": true
      },
      "hcpss": {
        "path": true,
        "map": true
      },
      "throttle": {
        "controller_requests": true
      }
    },
    "source": true,
    "device": true
  }
}